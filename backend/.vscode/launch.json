{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ts-node-dev debug",
      "runtimeExecutable": "${workspaceRoot}/node_modules/ts-node-dev/bin/ts-node-dev",
      "restart": true,
      "sourceMaps": true,
      "smartStep": true,
      "args": ["--respawn", "${workspaceRoot}/src/"],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
